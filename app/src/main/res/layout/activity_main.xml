<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alwayzcurious.todo.MainActivity"
   android:background="@drawable/background_main" >

    <include layout="@layout/appbar"
        android:id="@+id/include2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout3">

        <com.alwayzcurious.todo.Extras.FontButton1
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/button_date"
            android:text="16"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_cir_cal"
            android:textSize="55sp"
            android:textColor="#fff"
            tools:ignore="HardcodedText"
            android:clickable="false"/>

        <com.alwayzcurious.todo.Extras.FontButton1
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button_no_of_todo"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/button_date"
            android:layout_alignEnd="@+id/button_date"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/button_circular"
            android:text="8"
            android:textColor="#fff"
            tools:ignore="HardcodedText"
            android:textSize="16sp" />
        <com.alwayzcurious.todo.Extras.FontButton1
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TUE"
            android:layout_alignBottom="@id/button_date"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:textColor="#fff"
            android:id="@+id/button_day"
            tools:ignore="HardcodedText"
            android:textSize="18sp" />

    </RelativeLayout>

    <com.alwayzcurious.todo.Extras.FontTextView
        android:text="Good Morning !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_greeting"
        android:textColor="#303030"
        android:textSize="40sp"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/include2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <com.alwayzcurious.todo.Extras.FontTextView
        android:text="Month Year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_month_and_year"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:ignore="HardcodedText" />

    <com.alwayzcurious.todo.Extras.FontButton1
        android:text=">"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button_view_calendar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_circular"
        android:textColor="#fff"
        tools:ignore="HardcodedText"
        android:textSize="18sp" />


</RelativeLayout>
